    <style>
        .collapse-item:hover {
            background-color: white !important;
            color: red !important;
        }
    </style>
</head>

<body>

    <%- include('../partials/header') %>

        <div class="container">
            <div class="row">
                <div class="col-3">
                    <section class="py-5 container">
                        <ul style="min-height: 45vh;width: 8rem; "
                            class="my-5 navbar-nav navbar sidebar accordion text-gray-900 " id="accordionSidebar">

                            <li class="nav-item ">
                                <a class="nav-link collapsed border-left-danger" href="#" data-toggle="collapse"
                                    data-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">

                                    <span class="fs-5 fw-bolder">Danh mục</span>
                                </a>
                                <div id="collapseTwo" class="collapse " aria-labelledby="headingTwo"
                                    data-parent="#accordionSidebar">
                                    <div class="bg-white py-2 collapse-inner rounded">
                                        <a style="margin: 0;" class="collapse-item fs-6" href="/product/cat/all">
                                            Tất cả sản phẩm
                                        </a>
                                        <!-- <h6 class="collapse-header">Custom Components:</h6> -->
                                        <% for (let cat of category) { %>
                                            <a style="margin: 0;" class="collapse-item fs-6"
                                                href="/product/cat/<%=cat.id%>">
                                                <%= cat.name %>
                                            </a>
                                            <% } %>
                                    </div>
                                </div>
                            </li>

                        </ul>
                    </section>

                </div>
                <div class="col-9">
                    <%-body%>
                </div>

            </div>
        </div>
        <% if (relatives !=null) { %>
            <section class=" section-bg ">
                <div class="container">
                    <h2 class="fw-bolder mb-4">Sản phẩm liên quan</h2>
                    <div class="row row-cols-2 row-cols-md-3 row-cols-xl-4 ">
                        <% for (let product of relatives) { %>
                            <div class="col mb-5 hover_zoom">
                                <div class="card h-100">
                                    <!-- Product image-->
                                    <img style="width: 90%; margin: auto;" class="card-img-top"
                                        src="<%= product.imgURL %>" alt="..." />
                                    <!-- Product details-->
                                    <div class="card-body ">
                                        <div class="text-center  menu-item">
                                            <!-- Product name-->
                                            <h5 class="fw-bolder" style="min-height: 50px;">
                                                <%= product.name %>t
                                            </h5>
                                            <!-- Product price-->
                                            <p class="price">

                                                <%= product.price.toLocaleString('vi') %> VNĐ
                                            </p>
                                        </div>
                                    </div>
                                    <!-- Product actions-->
                                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                        <div class="text-center"><a class="btn-book-a-table"
                                                href="/product/<%= product.id %>">Xem ngay</a></div>
                                    </div>
                                </div>
                            </div>

                            <% } %>
                    </div>
                </div>
            </section>
            <% } %>
                <%- include('../partials/footer') %>


                    <a href="#" class="scroll-top d-flex align-items-center justify-content-center"><i
                            class="bi bi-arrow-up-short"></i></a>

                    <div id="preloader"></div>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
                        crossorigin="anonymous"></script>
                    <!-- Vendor JS Files -->

                    <script src="/assets/vendor/glightbox/js/glightbox.min.js"></script>



                    <!-- Template Main JS File -->
                    <script src="/assets/js/main.js"></script>


                    <!-- Core plugin JavaScript-->
                    <script src="/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

                    <!-- Custom scripts for all pages-->
                    <script src="/admin/js/sb-admin-2.min.js"></script>
                    <script src="/admin/vendor/jquery/jquery.min.js"></script>
                    <script src="/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

