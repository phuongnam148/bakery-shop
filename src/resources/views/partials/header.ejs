<!-- ======= Header ======= -->
<header id="header" class="header fixed-top d-flex align-items-center">
  <div class="container d-flex align-items-center justify-content-between">

    <a href="/home" class="logo d-flex align-items-center me-auto me-lg-0">
      <!-- Uncomment the line below if you also wish to use an image logo -->
      <!-- <img src="assets/img/logo.png" alt=""> -->
      <h1>FRESH <span> GARDEN</span></h1>
    </a>

    <nav id="navbar" class="navbar">
      <ul>
        <li><a href="#hero">Trang chủ</a></li>
        <li><a href="#about">Giới thiệu</a></li>
        <li class="dropdown"><a href="#menu"><span>Sản phẩm</span> <i
              class="bi bi-chevron-down dropdown-indicator"></i></a>
          <ul id="category">
            <% for (let c of category) { %>
              <li class="dropdown"><a href="/product/cat/<%= c.id %>"><span>
                    <%= c.name %>
                  </span></a>
                <% } %>
          </ul>
        </li>



        <li><a href="#chefs">Tin tức</a></li>

        <li><a href="#contact">Liên hệ</a></li>

        <li><a href="/cart">Giỏ hàng</a></li>

      </ul>
    </nav><!-- .navbar -->
    <% if (un !=null) { %>
      <nav id="navbar" class="navbar">
        <li style="list-style: none;" class="dropdown "><a class="btn-book-a-table" href="#menu"><span>
              <%=un%>
            </span> </a>
          <ul id="category">
            <li class="dropdown"><a href="/login/logout/"><span>Đăng xuất</span></a>
            <li class="dropdown"><a href="/login/changepass/<%=un %>"><span>Đổi mật khẩu</span></a>
          </ul>
        </li>
      </nav>
      <% }else{ %>
        <a class="btn-book-a-table" href="/login">Đặt mua ngay</a>
        <%} %>
          <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
          <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

  </div>
</header><!-- End Header -->