    </symbol>
  </svg>
  <% if (noti == 'deleted' ) { %>

  <div class="alert alert-success d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
    <div>
      Xóa sản phẩm thành công
    </div>
  </div>
  <%  } %>

  <% if (noti == 'updated' ) { %>
  
  <div class="alert alert-success d-flex align-items-center" role="alert">
    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
    <div>
     Sửa sản phẩm thành công
    </div>
  </div>
    <%  } %>
</svg>

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <div class="card-header py-3">
            <h1 class="h3 mb-2 text-gray-800">Danh sách sản phảm</h1>
        </div>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Giá</th>
                                <th>Mô tả</th>
                                <th>Loại</th>
                                <th>Hình</th>
                                <th>Sửa/Xóa</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Tên</th>
                                <th>Giá</th>
                                <th>Mô tả</th>
                                <th>Loại</th>
                                <th>Hình</th>
                                <th>Sửa/Xóa</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <% for (let p of products) { %>
                                <tr>
                                    <td>
                                        <%= p.id %>
                                    </td>
                                    <td>
                                        <%= p.name %>
                                    </td>
                                    <td>
                                        <%= p.price %>
                                    </td>
                                    <td>
                                        <%= p.detail %>
                                    </td>
                                    <% for (let c of categorys) { if(c.id==p.cat_id) { %>
                                        <td>
                                            <%= c.name %>
                                        </td>
                                        <% } %>
                                            <% } %>
                                                <td><img src="<%= p.imgURL %>" alt="" srcset=""
                                                        style="width: 200px; height: 200px;"></td>
                                                <td style="display: flex;">
                                                    <a style="display: block;" href="/admin/update/<%= p.id %>"
                                                        class="btn btn-info btn-circle btn-sm ">
                                                        <i class="fa fa-cog"></i>
                                                    </a>
                                                    <a onclick="return confirm(`Xóa sản phẩm?`)"
                                                        style="display: block; margin-left: 5px;"
                                                        href="/admin/delete/<%= p.id %>"
                                                        class="btn btn-danger btn-circle btn-sm "><i
                                                            class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

